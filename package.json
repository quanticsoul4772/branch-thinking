{
  "name": "branch-thinking-mcp",
  "version": "1.7.1",
  "description": "Multi-path reasoning MCP server with semantic analysis, contradiction detection, and persistence capabilities",
  "author": "quanticsoul4772",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quanticsoul4772/branch-thinking.git"
  },
  "bugs": {
    "url": "https://github.com/quanticsoul4772/branch-thinking/issues"
  },
  "homepage": "https://github.com/quanticsoul4772/branch-thinking#readme",
  "keywords": [
    "mcp",
    "mcp-server",
    "reasoning",
    "multi-path",
    "semantic-analysis",
    "bloom-filter",
    "graph-based",
    "ai-reasoning"
  ],
  "bin": {
    "mcp-server-branch-thinking": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "demo": "node scripts/demo.js",
    "openapi:serve": "tsx src/openapi-server.ts",
    "openapi:validate": "swagger-codegen validate -i spec/openapi.yaml",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@xenova/transformers": "^2.17.2",
    "chalk": "^5.3.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5.3.3",
    "tsup": "^8.0.2",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "tsx": "^4.7.0",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "semantic-release": "^22.0.12"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
